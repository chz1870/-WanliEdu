		$(this).hover(function(){
			$(this).find(".sub-menu").stop(true,true).fadeIn();			
		},function(){
			$(this).find(".sub-menu").stop(true,true).fadeOut();
		});
	});
	
	var articleUrl = '/_s2/dhxglj/list.psp';
	$.ajax({
		url: articleUrl,
		type: 'POST',
		contentType: "application/x-www-form-urlencoded; charset=utf-8",
		async: true,
		dataType: 'html',
		success: function(result){
			var $results = $(result);
			var $wpmenu = $(".wp-navi .wp-menu");
			$results.find(".post").each(function(index,el){
				$wpmenu.find(".menu-item").eq(index).find(".sub_bottom_text").append($(this).find(".subdatas").html())
			});
			//$wpmenu.find(".sub-item.i4-1").find(".nav_box").append(html);
			$results.find(".tels").find(".subdatas img").each(function(index,el){
				$wpmenu.find(".menu-item").eq(index).find(".sub_imgs").append(el)
			});

		}
	});
	
	// 判断是否为移动端运行环境
    if (/AppleWebKit.*Mobile/i.test(navigator.userAgent) || (/MIDP|SymbianOS|NOKIA|SAMSUNG|HUAWEI|OPPO|vivo|XIAOMI|LG|NEC|TCL|Alcatel|BIRD|DBTEL|Dopod|PHILIPS|HAIER|LENOVO|MOT-|Nokia|SonyEricsson|SIE-|Amoi|ZTE/.test(navigator.userAgent))){
        if (window.location.href.indexOf("?mobile") < 0) {
            try {
                if (/Android|webOS|iPhone|iPod|BlackBerry/i.test(navigator.userAgent)) {
                    // 判断访问环境是 Android|webOS|iPhone|iPod|BlackBerry 则运行以下脚本
                }
                else if (/iPad/i.test(navigator.userAgent)) {
                    // 判断访问环境是 iPad 则加载以下样式
                }
                else {
                    // 判断访问环境是 其他移动设备 则运行以下脚本
                }
            }
            catch (e) {}
        }
    }
	//pc端环境
    else {
        // 则运行以下脚本
        intFixednav();
    }
	
	
	function intFixednav() {
		$(window).scroll(function () {
			var scrollTop = $(window).scrollTop();
			if (scrollTop > 206){
				$('.navbox').addClass("fixednav").stop().animate({  top: 0 }, 300);
				$('.head-left').addClass("fixednav").stop().animate({  top: 0 }, 300);
				$('#header').css({"z-index":1000});
			}else{
				$('.navbox').css({"top":'-68px'}).removeClass("fixednav").stop().animate({  top: "48px" }, 300);
				$('.head-left').css({"top":'0px'}).removeClass("fixednav").stop().animate({  top: "0px" }, 300);
				$('#header').css({"z-index":99});
			}
		});
	}
	

