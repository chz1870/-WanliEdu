$("#fddx_gdssi1").hover(function(){
    $("#fddx_yxdw").css({
        display: "block"
    });
    $("#fddx_yxdw").stop().animate({
        opacity: 1
		
    },1000)},function() {
    $("#fddx_yxdw").stop().animate({
        opacity: 0
    }, 100,function() {
        $("#fddx_yxdw").css({
            display: "none"
        })
    });
});

